<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/announcement_red_circle"/>

    </LinearLayout>

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
    <TextView
        android:layout_gravity="center_horizontal"
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/announce_title"
        tools:text="the day a king was born"
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:focusable="false"
        android:maxLines="1"
        android:textSize="15sp"
        android:background="@drawable/rounded_edittext"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:text="@string/message_to_send"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/announce_message"
            android:textSize="15sp"
            tools:text="the day a king was born"
            android:layout_width="275dp"
            android:layout_marginTop="5dp"
            android:gravity="top"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:background="@drawable/rounded_edittext"
            android:maxLines="4"
            android:focusable="false"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/announce_send"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:background="@drawable/announce_button"
            android:text="send"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/announce_cancel"
            android:layout_marginStart="10dp"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:background="@drawable/announce_button"
            android:text="cancel"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:src="@drawable/esgo_anons"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/nb_announcement"/>

    </LinearLayout>

</LinearLayout>