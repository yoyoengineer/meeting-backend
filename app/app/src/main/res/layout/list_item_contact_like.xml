<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_contact"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        app:cardBackgroundColor="#bdacb6be">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:id="@+id/contact_name"
                    tools:text="the contact name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="10sp"
                    android:textColor="@color/darkgray"
                    android:id="@+id/contact_email"
                    tools:text="the contact city"/>
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginStart="70dp"
                android:id="@+id/contact_img"
                android:src="@drawable/photo_no_image"
                android:background="@drawable/circular_white_stroke" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="end"
                android:id="@+id/liked"
                android:layout_marginStart="10dp"
                android:src="@drawable/like_start"
                android:layout_gravity="center"
                android:background="@drawable/circlewhitebutton" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/darkgray"
        android:layout_gravity="center"
        />

</LinearLayout>