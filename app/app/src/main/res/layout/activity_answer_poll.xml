<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".event.admin.AnswerPollActivity"
    android:background="@color/gray_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">
        <TextView
            android:id="@+id/question_poll"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:text="Which question are you interested in?"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/answer_poll"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="choose only one answer"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="5dp">
        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/submit_poll"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_see_pool_result"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>


</LinearLayout>