<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/visibility_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/agenda_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/white_edit_text_agenda"
            android:textSize="20sp"
            android:focusable="false"/>

        <TextView
            android:id="@+id/agenda_start_time_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="7:30 AM"
            />
        <TextView
            android:id="@+id/agenda_end_time_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="8:30 AM"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/primary_blue"
                android:background="@drawable/white_edit_text_agenda"
                android:text="Location:"
                android:focusable="false"/>
            <EditText
                android:id="@+id/agenda_location_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/primary_blue"
                android:background="@drawable/white_edit_text_agenda"
                android:text="NewYork City"
                android:focusable="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/agenda_content"
            android:layout_width="match_parent"
            android:textColor="@color/primary_text"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="18sp"
            android:background="@drawable/white_edit_text_agenda"
            android:gravity="top"
            android:focusable="false"/>

    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="1dp"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:background="#000" />-->

</RelativeLayout>